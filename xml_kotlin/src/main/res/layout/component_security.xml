<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <TextView
        android:id="@+id/securityStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Home Secure"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/doorStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Door: Closed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/securityStatus" />

    <TextView
        android:id="@+id/windowStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Window: Closed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/doorStatus" />

    <TextView
        android:id="@+id/motionStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Motion: Idle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/windowStatus" />

</androidx.constraintlayout.widget.ConstraintLayout>